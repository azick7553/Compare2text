        mc:Ignorable="d"
        Title="Сравнить два текста" Height="301.105" Width="591.917" ResizeMode="NoResize">
    <Grid>
        <RichTextBox x:Name="text1" HorizontalAlignment="Left" Height="100" Margin="10,15,0,0" VerticalAlignment="Top" Width="566">
            <FlowDocument>
                <Paragraph>
                    <Run Text=""/>
