                <Paragraph>
                    <Run Text=""/>
                </Paragraph>
            </FlowDocument>
        </RichTextBox>
        <Label Content="Текст 1" HorizontalAlignment="Left" Margin="10,-6,0,0" VerticalAlignment="Top" FontWeight="Bold"/>
